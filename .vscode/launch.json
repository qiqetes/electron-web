{
  // This file is used to launch the application with the debugger
  // attached in vscode

  "version": "0.2.0",
  "configurations": [
    {
      "name": "ELECTRON",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start"]
    }
  ]
}


{
  "name": "desktop-electron-webpack",
  "productName": "Bestcycling TV",
  "version": "4.0.0",
  "description": "Aplicaci√≥n de escritorio Bestcycling desarrollada con electron",
  "main": ".webpack/main",
  "scripts": {
    "start": "cross-env-shell ENV=dev electron-forge start",
    "dev": "cross-env-shell ENV=dev electron-forge start",
    "package": "electron-forge package",
    "make": "cross-env-shell ENV=prod electron-forge make",
    "make-dev": "cross-env-shell ENV=dev electron-forge make",
    "publish": "cross-env-shell ENV=dev electron-forge publish",
    "publish-test": "node process/gen_manifest && cross-env-shell ENV=dev electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [],
  "author": {
    "name": "Enrique Llopis",
    "email": "enrique@bestcycling.es"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/app-icon.ico",
        "appBundleId": "com.nw-builder.bestcyclingtv",
        "osxSign": {
          "identity": "Developer ID Application: Bestcycling SL (YMCHSA4437)",
          "entitlements": "./process/entitlements.plist",
          "entitlements-inherit": "./process/entitlements.plist"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "BestcyclingTV"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "./assets/app-icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-s3",
          "config": {
            "bucket": "bestcycling-production",
            "folder": "desktop/qiqe-temp",
            "public": true
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  },
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.63",
    "@electron-forge/publisher-s3": "^6.0.0-beta.64",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "aws-sdk": "^2.1162.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "19.0.3",
    "eslint": "^8.16.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "fork-ts-checker-webpack-plugin": "^6.5.2",
    "i": "^0.3.7",
    "node-loader": "^2.0.0",
    "npm": "^8.13.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.0",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "@commonify/lowdb": "^3.0.0",
    "@electron-forge/maker-dmg": "^6.0.0-beta.64",
    "@types/follow-redirects": "^1.14.1",
    "@types/fs-extra": "^9.0.13",
    "axios": "^0.27.2",
    "electron-squirrel-startup": "^1.0.0",
    "eslint-import-resolver-custom-alias": "^1.3.0",
    "follow-redirects": "^1.15.1",
    "fs-extra": "^10.1.0",
    "kitsu": "10.0.0-alpha.23"
  }
}
